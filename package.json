{
  "name": "brew-me",
  "version": "0.0.0",
  "description": "",
  "main": "index.js",
  "watch": {
    "build": {
      "patterns": [
        "./client/*.html",
        "./client/*.js",
        "./client/src/**/*",
        "./lib/src/**/*",
        "./server/src/**/*"
      ],
      "extensions": "ts,js,html,css",
      "quiet": false,
      "legacyWatch": true,
      "delay": 2500,
      "runOnChangeOnly": false
    },
    "dev": {
      "patterns": [
        "./client/dist/**/*",
        "./lib/dist/**/*",
        "./server/src/**/*"
      ],
      "extensions": "ts,js,html,css",
      "quiet": false,
      "legacyWatch": true,
      "delay": 2500,
      "runOnChangeOnly": false
    },
    "start": {
      "patterns": [
        "./client/dist/**/*",
        "./lib/dist/**/*",
        "./server/src/**/*"
      ],
      "extensions": "ts,js,html,css",
      "quiet": false,
      "legacyWatch": true,
      "delay": 2500,
      "runOnChangeOnly": false
    },
    "test": {
      "patterns": [
        "./client/*.html",
        "./client/*.js",
        "./client/src/**/*",
        "./lib/src/**/*",
        "./server/src/**/*"
      ],
      "extensions": "ts,js,html,css",
      "quiet": false,
      "legacyWatch": true,
      "delay": 2500,
      "runOnChangeOnly": false
    }
  },
  "scripts": {
    "build": "npm run build --workspace client --workspace lib --workspace server",
    "start": "cd server/dist && node index.js",
    "dev": "npm run dev --workspace server",
    "prepare": "husky install",
    "watch:build": "npm-watch build",
    "watch:dev": "npm-watch dev",
    "watch:start": "npm-watch start",
    "watch": "run-p watch:build watch:dev",
    "test": "npm run test --workspace client --workspace e2e --workspace server --if-present"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "workspaces": [
    "client",
    "e2e",
    "eslint-configs",
    "lib",
    "server"
  ],
  "dependencies": {
    "typescript": "^4.7.4"
  },
  "devDependencies": {
    "husky": "^8.0.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.11.0",
    "wait-run": "^1.2.0"
  }
}
