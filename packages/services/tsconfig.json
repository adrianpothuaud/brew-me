{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "declaration": true,
    "types": [
      "@brew-me/error"
    ]
  },
  "exclude":[
    "./node_modules"
  ],
  "include": [
    "src/**/*"
  ]
}