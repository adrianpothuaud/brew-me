{
    "version": "0.2.0",
    "configurations": [
      {
        "name": "Launch 'lint' via NPM",
        "request": "launch",
        "runtimeArgs": [
          "run-script",
          "lint"
        ],
        "runtimeExecutable": "npm",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "node"
      },
      {
        "name": "Launch 'test' via NPM",
        "request": "launch",
        "runtimeArgs": [
          "run-script",
          "test"
        ],
        "runtimeExecutable": "npm",
        "skipFiles": [
          "<node_internals>/**"
        ],
        "type": "node"
      }
    ]
}